{{ 'component-prefooter.css' | asset_url | stylesheet_tag }}

<div class="bg-infinitegrey py-20 lg:py-32 prefooter">
  <div class="content">
    <div>
      <h2 class="font-bold text-5xl lg:text-6xl mb-10 lg:mb-16">{{ section.settings.title }}</h2>
      <h3 class="text-3xl lg:text-4xl max-w-7xl mb-4 lg:mb-8">{{ section.settings.subtitle }}</h3>
      <p class="mb-6">{{ section.settings.description | strip_html }}</p>
      <a class="bg-infinitegreen text-center text-sm uppercase text-white font-bold rounded-xl px-14 py-5 block mt-4 inline-block lg:w-auto w-full" href="{{ section.settings.ctalink.url }}">{{ section.settings.ctatext }}</a>
    </div>
    <div class="flex lg:flex-nowrap flex-wrap justify-between gap-12 lg:gap-20 mt-20">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'detail' %}
            <div class="flex flex-col lg:w-1/3 w-full">
              {{ block.settings.icon | image_url: height: max | image_tag }}
              <h4 class="font-bold text-3xl lg:text-4xl mb-10 mt-8">{{ block.settings.title }}</h4>
              <p class="">{{ block.settings.description }}</p>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
    <h5 class="font-bold text-2xl lg:text-4xl mt-12 lg:mt-60 lg:max-w-7xl">{{ section.settings.message | strip_html }}</h5>
  </div>
</div>

{%- style -%}

{%- endstyle -%}


{% schema %}
  {
    "name": "Prefooter",
    "class": "index-section index-section--flush",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title"
      },
		{
        "id": "subtitle",
        "type": "text",
        "label": "Sub Title"
      },
		{
        "id": "description",
        "type": "richtext",
        "label": "Description"
      },
		{
        "id": "ctatext",
        "type": "text",
        "label": "CTA Text"
      },
		{
        "id": "ctalink",
        "type": "collection",
        "label": "CTA Link"
      },
		{
        "id": "message",
        "type": "richtext",
        "label": "Message"
      }
    ],
	"blocks": [
     {
       "name": "Column",
       "type": "detail",
       "settings": [
         {
           "type": "image_picker",
           "id": "icon",
           "label": "Icon"
         },
			{
           "type": "text",
           "id": "title",
           "label": "Title"
         },
              {
           "type": "text",
           "id": "description",
           "label": "Description"
         }
       ]
     }
   ],
    "presets": [{
      "name": "Prefooter",
      "category": "Text"
    }]
  }
{% endschema %}